<h1>Loads#index</h1>
<p>Find me in app/views/loads/index.html.erb</p>

<div>Starting location</div>
<%= @origin_location %>

<%= form_with method: :post do |form| %>
  <div>Starting date</div>
  <%= form.date_field :origin_date, value: origin_date || Date.today %>

  <label>DAT token
    <%= form.text_field :dat_token, value: params[:dat_token], required: true %>
    <%= form.submit 'Load' %>
  </label>
<% end %>

<%= render 'table' %>